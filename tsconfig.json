{
    "compileOnSave": true,
    "autoFixOnSave": true,
    "compilerOptions": {
      "baseUrl": ".",
      "paths": { "*": ["types/*"] },
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "target": "es6",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "removeComments": true,
      "esModuleInterop": true,
      "types": ["reflect-metadata","jest"],
      "typeRoots": [
        "node_modules/@types"
      ],
      "moduleResolution": "node",
      "lib": ["es6", "dom"],
      "noUnusedLocals": false,
      "noFallthroughCasesInSwitch": true,
      "sourceMap": true,
      "inlineSources": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
